<table class="table table-hover">
 <thead class="table-success">
    <td> Date </td>
    <td> Total Price </td>
    <td> No.of Item Sold </td>
    <td> Profit </td>   
 </thead>
    <% @history.each do |history|%>
     <tr class="table-success">
       <td> <%= history.updated_at.strftime('%a, %d %b %Y %H:%M:%S')%> </td>
       <td> <%= number_to_currency(history.amount)%> </td>
       <td> <%= history.item_sold%> </td>
       <td> <%= number_to_currency(history.gross_profit)%> </td>
       <td> <%= link_to "Refund", user_history_path(current_user.id, history.id), method: :delete%>
     </tr>
     
    <%end%>
</table>