
<div class="p-5 mb-4 bg-light rounded-3">
    <div class ="container-fluid py-5">
        <strong>Name:</strong>
        <%= @product.name%>
            </br>
        <strong>Price:</strong>
        <%= number_to_currency(@product.price)%>
            </br>
        <strong>Profit:</strong>
        <%= number_to_currency(@product.profit)%>
            </br>
        <strong>
        <%= "Category".pluralize(@product.categories.count)%>
        </strong>:  
        
        <%= @product.categories.map {|category| category.name}.join(", ")%>
             </br>
        <strong>Quantity: </strong>
        <%= @product.quantity%>
            </br>
        <strong>Last Updated: </strong>
        <%= @product.updated_at %>
        

    </div>
</div>
<%= link_to "Back to Products", user_products_path(current_user.id), class: "btn btn-primary"%>
<%= link_to "Edit", edit_user_product_path(current_user.id, @product.id), class: "btn btn-primary"%>