<div class= "show_post">
 <%= @post.title %>
 <img src="<%= url_for(@post.image) %>">
 <% unless @post.comments.empty?%>
           <% @post.comments.map do |comment|%>
              <div class="box1">
                <%= comment.comment%>
              </div>
              <%end%>
<%end%>
</div>
 </br>
<%= render "comments/form", comment: @comment%>
