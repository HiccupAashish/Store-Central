<div id="<%= dom_id cart %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= cart.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= cart.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= cart.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this cart", cart, class: "rounded-lg py-3 px-5  inline-block font-medium" %>
    <%= link_to 'Edit this cart', edit_cart_path(cart), class: "rounded-lg py-3 ml-2 px-5  inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
